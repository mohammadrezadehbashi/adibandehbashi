@model IEnumerable<DataLayer.PageComment>

@foreach(var item in Model)
{
    <!-- start each comment -->
        <li>
            <img src="~/PageImages/ +@item.Page.ImageName">
            <div>
                <span> @item.Name </span>
                <span>@item.CreateDate.ToShamsi()</span>
            </div>
            <p>@item.Comment</p>
        </li>
        <!-- end each comment -->
}